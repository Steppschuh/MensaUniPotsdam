<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/cover_menu"
        android:scaleType="centerCrop"
        android:alpha="0.2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/meal_name"
            android:textSize="16sp"
            android:textColor="@color/text_main"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="Panierte Hähnchenbrust mit Sauce Bernaise und Brokkoli, dazu Kroketten oder Salzkartoffeln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/meal_icon_container"
            android:orientation="horizontal"
            android:layout_above="@id/meal_name"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_chicken"
                android:layout_margin="5dp"
                android:scaleType="centerInside"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <ImageView
                android:src="@drawable/ic_pig"
                android:layout_margin="5dp"
                android:scaleType="centerInside"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@id/meal_name"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/meal_category"
                android:textSize="14sp"
                android:textColor="@color/text_sub"
                android:gravity="center"
                android:text="Angebot 1"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/meal_price"
                android:textSize="14sp"
                android:textColor="@color/text_sub"
                android:gravity="center"
                android:text="2,20€"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>