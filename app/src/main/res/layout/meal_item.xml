<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/green_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/meal_background"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_logo_green"
        android:alpha="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <LinearLayout
        android:id="@+id/meal_icon_container"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:background="@color/meal_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/meal_info_container"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/meal_back"
        android:layout_toRightOf="@id/meal_icon_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/meal_name"
            android:textSize="16sp"
            android:textColor="@color/text_main"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="Panierte Hähnchenbrust mit Sauce Bernaise und Brokkoli, dazu Kroketten oder Salzkartoffeln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_above="@id/meal_name"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/meal_category"
                android:textSize="14sp"
                android:textColor="@color/text_sub"
                android:gravity="center"
                android:text="Angebot 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/meal_price"
                android:textSize="14sp"
                android:textColor="@color/text_sub"
                android:gravity="center"
                android:text="2,20€"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>