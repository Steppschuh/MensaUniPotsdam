<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/green_light"
    android:id="@+id/meal_item_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/meal_image_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:src="@drawable/food_schweinefleich"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:src="@drawable/food_kartoffeln"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:src="@drawable/food_erbsen"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/meal_info_container"
        android:layout_below="@id/meal_image_container"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_above="@id/meal_name"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/meal_category"
                android:textSize="14sp"
                android:textColor="@color/text_light_sub"
                android:gravity="center"
                android:text="Angebot 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/meal_price"
                android:textSize="14sp"
                android:textColor="@color/text_light_sub"
                android:gravity="center"
                android:text="2,20€"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/meal_name"
            android:textSize="16sp"
            android:textColor="@color/text_light_main"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="Panierte Hähnchenbrust mit Sauce Bernaise und Brokkoli, dazu Kroketten oder Salzkartoffeln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/meal_icon_container"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_chicken"
                    android:scaleType="centerInside"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_light_sub"
                    android:text="@string/unkown"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/meal_share"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@color/green_light_transparent"
        android:clickable="true"
        android:layout_width="50dp"
        android:layout_height="100dp">

        <ImageView
            android:src="@drawable/ic_share"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</RelativeLayout>